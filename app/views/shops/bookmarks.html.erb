<div class="max-w-[1200px] mx-auto mb-20">
<h2 class="text-2xl md:text-3xl font-bold mt-6 mb-1 ml-2 md:ml-0">お気に入り</h2>
  <!-- ショップ一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @shop_bookmarks.present? %>
          <% @shop_bookmarks.each do |bookmark| %>
          <p>ショップID:<%= bookmark.shop_id %></p>
          <p><%= bookmark.shop.name %></p>
        <% end %>
        <% else %>
          <p>まだお気に入りがありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>