<%= search_form_for @q, url: search_shops_path, method: :get, data: { turbo: false }, html: { class: "flex items-center justify-center space-x-4" } do |f| %>
  <div class="flex-1 relative"> <!-- relativeを追加 -->
    <span class="material-symbols-outlined absolute left-3 top-1/2 transform -translate-y-1/2">search</span> <!-- アイコンの位置を調整 -->
    <%= f.text_field :name_or_address_cont, placeholder: "ショップ名・エリアなど", class: "mt-1 block w-full px-10 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div>
    <%= f.submit "検索", class: "flex items-center px-6 py-2 btn btn-primary" %>
  </div>
<% end %>
