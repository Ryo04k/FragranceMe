<div id="flash-message" class="relative flex items-center rounded-md bg-opacity-90 backdrop-blur z-50 transition-all duration-300 ease-in-out">
<% flash.each do |message_type, message| %>
  <div id="elementId" class="<%= flash_background_color(message_type) %> w-5/6 md:max-w-md mx-auto text-xs md:text-sm text-white text-center px-4 md:px-6 py-3 rounded-lg fixed top-9 md:top-10 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 shadow-sm opacity-90 font-medium">
    <%= message %>
  </div>
<% end %>
</div>
